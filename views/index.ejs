<%- include('partials/header') %>
<%- include('partials/navbar') %>
<div class="container">
    <h1>Perguntas</h1>
    <hr>
    <a class="btn btn-success" href="/perguntar">Perguntar</a>
    <hr>
    <% perguntas.forEach((item) => { %> 
      <br>
        <div class="card">
            <div class="card-body">
                <h3><%= item.titulo %></h3>
            </div>
            <div class="card-footer">
               <a href="/pergunta/<%= item.id %>"><button class="btn btn-primary">Responder</button></a>
            </div>
        </div>
    <% }) %>
</div>


<%- include('partials/footer') %>